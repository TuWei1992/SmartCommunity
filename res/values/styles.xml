<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 智慧社区全局样式 -->
    <style name="SC.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/SC.ActionBar</item>
        <item name="actionBarDivider">@drawable/actionbar_divider</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_up_indicator</item>
    </style>
    
    <!-- ActionBar样式  -->
    <style name="SC.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
    </style>
    
    <!-- 底部弹出样式对话框 -->
    <style name="popupStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AnimationBottom</item>
    </style>
    
    <style name="AnimationBottom">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    
    <style name="button_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
